@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label for="username">Email address</label>
                <input type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter email" value="aleksandr@test.com">
            </div>
        </div>
        <div class="col-4">

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password">
            </div>
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-primary" id="loginButton">Login</button>
        </div>
    </div>
    
    <br/>
    
    <div class="row">
        <div class="col-12">Is authorized: <span id="authorization-info">false</span></div>
        <div class="col-12">Token: <span id="authorization-token"></span></div>
    </div>
    
    <br/>
    
    <div class="row">
        
        <div class="col-12">
                <div class="form-group">
                    <label for="displayName">Display Name</label>
                    <input type="text" class="form-control" id="displayName" name="displayName"
                           placeholder="Enter display name">
                </div>
                <div class="form-group">
                    <label for="legalName">Legal Name</label>
                    <input type="text" class="form-control" id="legalName" name="legalName"
                           placeholder="Enter legal name">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="Enter address">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="mainPhoneNumber">Main Phone Number</label>
                    <input type="text" class="form-control" id="mainPhoneNumber" name="mainPhoneNumber"
                           placeholder="Enter main phone number">
                </div>
                <div class="form-group">
                    <label for="secondaryPhoneNumber">Secondary Phone Number</label>
                    <input type="text" class="form-control" id="secondaryPhoneNumber" name="secondaryPhoneNumber"
                           placeholder="Enter secondary phone number">
                </div>
                <button type="button" class="btn btn-primary" onclick="saveMerchants()">Save</button>
        </div>
    </div>
    
    
    <div class="row">
        <div class="col-3">
            <div class="form-group">
            <label for="filter_of_merchant">filter:</label>
            <input id="filter_of_merchant"/>
            </div>
        </div>     
        <div class="col-3">
            <div class="form-group">
            <label for="page-merchant">page:</label>
            <input type="number" id="page-merchant" value="1"/>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
            <label for="pageSize-merchant">pageSize:</label>
            <input type="number" id="pageSize-merchant" value="10"/>
            </div>
        </div>
        <div class="col-3">
            <button type="button" class="btn btn-primary" onclick="getMerchants()">Get Merchants</button>
        </div>
        <div class="col-12">
            <table class="table" id="merchant-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody id="merchants">
                </tbody>
            </table>
        </div>
    </div>
    

</div>